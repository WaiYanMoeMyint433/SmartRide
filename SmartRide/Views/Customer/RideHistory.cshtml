@model List<SmartRide.Models.Ride>
@{
    ViewBag.Title = "Your Ride History - Smart Ride";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: linear-gradient(135deg, #f8f6ff 0%, #ffffff 100%);
    }

    .page-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        max-width: 500px;
        margin: 0 auto;
        background: white;
    }

    .header {
        display: flex;
        align-items: center;
        padding: 20px;
        background: white;
        border-bottom: 1px solid #f3f4f6;
    }

    .back-btn {
        background: #f5f5f5;
        border: none;
        border-radius: 12px;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        margin-right: 20px;
        transition: all 0.2s ease;
        text-decoration: none;
        color: #374151;
    }

    .back-btn:hover {
        background: #e5e7eb;
        color: #374151;
    }

    .header-content {
        flex: 1;
    }

    .page-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 2px;
    }

    .page-subtitle {
        font-size: 0.9rem;
        color: #9ca3af;
    }

    .main-content {
        flex: 1;
        padding: 20px;
    }

    .stats-overview {
        display: flex;
        justify-content: center;
        margin-bottom: 24px;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 20px 24px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        border: 1px solid #f3f4f6;
        min-width: 120px;
    }

    .section-title {
        margin-bottom: 20px;
    }

    .section-title h3 {
        font-size: 1.1rem;
        font-weight: 600;
        color: #374151;
        margin: 0;
    }

    .stat-value {
        font-size: 1.2rem;
        font-weight: 700;
        color: #a64bf4;
        margin-bottom: 4px;
    }

    .stat-label {
        font-size: 0.75rem;
        color: #6b7280;
        font-weight: 500;
    }

    .rides-list {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .ride-card {
        background: white;
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(166, 75, 244, 0.1);
        transition: all 0.2s ease;
    }

    .ride-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
    }

    .ride-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 16px;
    }

    .ride-date {
        flex: 1;
    }

    .date-day {
        font-size: 1.1rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 2px;
    }

    .date-time {
        font-size: 0.85rem;
        color: #9ca3af;
    }

    .ride-status {
        display: flex;
        align-items: center;
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .status-icon {
        margin-right: 4px;
        font-size: 0.7rem;
    }

    .route-section {
        margin-bottom: 16px;
    }

    .route-item {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
    }

    .route-item:last-child {
        margin-bottom: 0;
    }

    .route-icon {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin-right: 12px;
        flex-shrink: 0;
    }

    .pickup-icon {
        background: #10b981;
    }

    .dropoff-icon {
        background: #ef4444;
    }

    .route-text {
        font-size: 0.9rem;
        color: #374151;
        font-weight: 500;
    }

    .route-label {
        font-size: 0.75rem;
        color: #9ca3af;
        margin-bottom: 2px;
    }

    .ride-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
        margin-bottom: 16px;
    }

    .detail-group {
        display: flex;
        flex-direction: column;
    }

    .detail-label {
        font-size: 0.75rem;
        color: #9ca3af;
        font-weight: 500;
        margin-bottom: 4px;
    }

    .detail-value {
        font-size: 0.9rem;
        color: #374151;
        font-weight: 500;
    }

    .ride-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 16px;
        border-top: 1px solid #f3f4f6;
    }

    .driver-info {
        display: flex;
        align-items: center;
    }

    .driver-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: linear-gradient(135deg, #a64bf4, #c777f7);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.8rem;
        font-weight: 600;
        margin-right: 8px;
    }

    .driver-details {
        display: flex;
        flex-direction: column;
    }

    .driver-name {
        font-size: 0.85rem;
        font-weight: 500;
        color: #374151;
        margin-bottom: 1px;
    }

    .vehicle-info {
        font-size: 0.75rem;
        color: #9ca3af;
    }

    .fare-amount {
        font-size: 1.1rem;
        font-weight: 600;
        color: #a64bf4;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .empty-illustration {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #f8f6ff, #e5e7eb);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin-bottom: 24px;
        border: 2px solid rgba(166, 75, 244, 0.1);
    }

    .empty-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 8px;
    }

    .empty-subtitle {
        font-size: 0.95rem;
        color: #6b7280;
        margin-bottom: 24px;
        line-height: 1.5;
    }

    .btn-book {
        background: linear-gradient(135deg, #a64bf4, #c777f7);
        color: white;
        padding: 14px 24px;
        border: none;
        border-radius: 16px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        box-shadow: 0 4px 15px rgba(166, 75, 244, 0.25);
    }

    .btn-book:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(166, 75, 244, 0.35);
        color: white;
    }

    /* Responsive */
    @@media (max-width: 480px) {
        .page-container {
            margin: 0;
        }
        
        .header {
            padding: 16px;
        }
        
        .main-content {
            padding: 16px;
        }
        
        .ride-card {
            padding: 16px;
        }
        
        .stat-card {
            padding: 16px 20px;
        }
    }

    @@media (min-width: 768px) {
        .page-container {
            max-width: 600px;
        }
    }
</style>

<div class="page-container">
    <div class="header">
        <a asp-action="Dashboard" class="back-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
        </a>
        <div class="header-content">
            <div class="page-title">Your Ride History</div>
            <div class="page-subtitle">View all your completed rides</div>
        </div>
    </div>

    <div class="main-content">
        @if (Model?.Any() == true)
        {
            <!-- Stats Overview -->
            <div class="stats-overview">
                <div class="stat-card">
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Total Rides</div>
                </div>
            </div>

            <!-- Section Title -->
            <div class="section-title">
                <h3>All Rides</h3>
            </div>

            <!-- Rides List -->
            <div class="rides-list">
                @foreach (var ride in Model.OrderByDescending(r => r.StartTime))
                {
                    <div class="ride-card">
                        <div class="ride-header">
                            <div class="ride-date">
                                <div class="date-day">@ride.StartTime?.ToString("MMM dd, yyyy")</div>
                                <div class="date-time">
                                    @ride.StartTime?.ToString("HH:mm") - @ride.EndTime?.ToString("HH:mm")
                                </div>
                            </div>
                            <div class="ride-status">
                                <span class="status-icon">✓</span>
                                Completed
                            </div>
                        </div>

                        <div class="route-section">
                            <div class="route-item">
                                <div class="route-icon pickup-icon"></div>
                                <div>
                                    <div class="route-label">Pickup</div>
                                    <div class="route-text">@ride.PickupLocation</div>
                                </div>
                            </div>
                            <div class="route-item">
                                <div class="route-icon dropoff-icon"></div>
                                <div>
                                    <div class="route-label">Drop-off</div>
                                    <div class="route-text">@ride.DropoffLocation</div>
                                </div>
                            </div>
                        </div>

                        <div class="ride-details">
                            <div class="detail-group">
                                <span class="detail-label">Distance</span>
                                <span class="detail-value">@ride.Distance.ToString("F1") km</span>
                            </div>
                            <div class="detail-group">
                                <span class="detail-label">Duration</span>
                                <span class="detail-value">
                                    @(ride.EndTime.HasValue && ride.StartTime.HasValue ?
                                        (ride.EndTime.Value - ride.StartTime.Value).ToString(@"hh\:mm") : "N/A")
                                </span>
                            </div>
                        </div>

                        <div class="ride-footer">
                            <div class="driver-info">
                                <div class="driver-avatar">
                                    @((ride.Driver?.Name ?? "U").Substring(0, 1).ToUpper())
                                </div>
                                <div class="driver-details">
                                    <div class="driver-name">@(ride.Driver?.Name ?? "Unknown Driver")</div>
                                    @if (ride.Driver != null)
                                    {
                                        <div class="vehicle-info">@ride.Driver.VehicleType - @ride.Driver.VehicleId</div>
                                    }
                                </div>
                            </div>
                            <div class="fare-amount">$@ride.Fare.ToString("F2")</div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-illustration">
                    🚗
                </div>
                <div class="empty-title">No ride history yet</div>
                <div class="empty-subtitle">Take your first ride to start building your history and unlock insights about your travels</div>
                <a asp-action="BookRide" class="btn-book">
                    🚗 Book Your First Ride
                </a>
            </div>
        }
    </div>
</div>