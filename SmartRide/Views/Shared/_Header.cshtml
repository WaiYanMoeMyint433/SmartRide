@{
    // This file should be saved as: Views/Shared/_Header.cshtml
}

<style>
    .smart-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
        background: white;
        border-bottom: 1px solid #f3f4f6;
        position: relative;
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 16px;
        flex: 1;
    }

    .back-btn {
        background: #f5f5f5;
        border: none;
        border-radius: 12px;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        color: #374151;
    }

        .back-btn:hover {
            background: #e5e7eb;
            color: #374151;
        }

    .brand-section {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .brand-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #a64bf4, #c777f7);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(166, 75, 244, 0.2);
    }

    .page-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #374151;
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .user-menu {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.85rem;
        color: #6b7280;
    }

    .user-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: linear-gradient(135deg, #a64bf4, #c777f7);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .logout-btn {
        background: #f3f4f6;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 0.8rem;
        font-weight: 500;
        color: #6b7280;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 4px;
    }

        .logout-btn:hover {
            background: #e5e7eb;
            color: #374151;
        }

    /* Responsive */
    @@media (max-width: 480px) {
        .smart-header {
            padding: 16px;
        }

        .user-info span {
            display: none; /* Hide username on small screens */
        }

        .logout-btn {
            padding: 6px 8px;
            font-size: 0.75rem;
        }

        .page-title {
            font-size: 1.2rem;
        }
    }

    @@media (max-width: 320px) {
        .brand-section {
            gap: 8px;
        }

        .brand-icon {
            width: 32px;
            height: 32px;
        }

        .page-title {
            font-size: 1.1rem;
        }
    }
</style>

<div class="smart-header">
    <div class="header-left">
        @if (ViewBag.ShowBack == true)
        {
            <a href="javascript:history.back()" class="back-btn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5M12 19l-7-7 7-7" />
                </svg>
            </a>
        }

        <div class="brand-section">
            <div class="brand-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
                    <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.22.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z" />
                </svg>
            </div>
            <div class="page-title">
                @(ViewBag.PageTitle ?? "Smart Ride")
            </div>
        </div>
    </div>

    <div class="header-right">
        <div class="user-menu">
            <div class="user-info">
                <div class="user-avatar">
                    @{
                        var userName = "";
                        // Try to get user name from different sources
                        if (ViewBag.UserName != null)
                        {
                            userName = ViewBag.UserName.ToString();
                        }
                        else if (ViewBag.CurrentUser?.Name != null)
                        {
                            userName = ViewBag.CurrentUser.Name.ToString();
                        }
                        else if (User.Identity?.Name != null)
                        {
                            userName = User.Identity.Name;
                        }
                        else
                        {
                            userName = "User";
                        }

                        var firstLetter = userName.Length > 0 ? userName.Substring(0, 1).ToUpper() : "U";
                    }
                    @firstLetter
                </div>
                <span>@userName</span>
            </div>
            <a asp-controller="Account" asp-action="Logout" class="logout-btn" onclick="return confirm('Are you sure you want to logout?')">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                    <polyline points="16,17 21,12 16,7" />
                    <line x1="21" y1="12" x2="9" y2="12" />
                </svg>
                Logout
            </a>
        </div>
    </div>
</div>