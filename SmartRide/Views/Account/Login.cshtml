@model LoginViewModel
@{
    ViewBag.Title = "Login - Smart Ride";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: linear-gradient(135deg, #f8f6ff 0%, #ffffff 100%);
    }

    .page-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .login-container {
        background: white;
        border-radius: 24px;
        padding: 40px;
        box-shadow: 0 20px 60px rgba(166, 75, 244, 0.08);
        width: 100%;
        max-width: 420px;
        border: 1px solid rgba(166, 75, 244, 0.1);
    }

    .brand-section {
        text-align: center;
        margin-bottom: 40px;
    }

    .brand-title {
        font-size: 2.8rem;
        font-weight: 700;
        background: linear-gradient(135deg, #a64bf4, #c777f7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
        letter-spacing: -0.5px;
    }

    .brand-subtitle {
        font-size: 0.95rem;
        color: #9ca3af;
        font-weight: 400;
        font-style: italic;
        margin-bottom: 0;
    }

    .login-form {
        width: 100%;
    }

    .form-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #a64bf4;
        text-align: center;
        margin-bottom: 32px;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid #e5e7eb;
        border-radius: 25px;
        font-size: 1rem;
        outline: none;
        transition: all 0.3s ease;
        background: #fafafa;
    }

        .form-control:focus {
            border-color: #a64bf4;
            background: white;
            box-shadow: 0 0 0 3px rgba(166, 75, 244, 0.1);
        }

        .form-control::placeholder {
            color: #9ca3af;
            font-weight: 400;
        }

    .btn-login {
        width: 100%;
        padding: 16px;
        border-radius: 25px;
        border: none;
        background: linear-gradient(135deg, #a64bf4, #c777f7);
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 8px;
        box-shadow: 0 4px 15px rgba(166, 75, 244, 0.2);
    }

        .btn-login:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(166, 75, 244, 0.3);
        }

        .btn-login:active {
            transform: translateY(0);
        }

    .text-danger {
        font-size: 0.85rem;
        color: #ef4444;
        margin-top: 5px;
        display: block;
    }

    .validation-summary {
        background: #fef2f2;
        border: 1px solid #fecaca;
        border-radius: 12px;
        padding: 12px;
        margin-bottom: 20px;
        color: #dc2626;
        font-size: 0.9rem;
        text-align: center;
    }

    .register-section {
        text-align: center;
        margin-top: 24px;
        padding-top: 20px;
        border-top: 1px solid #f3f4f6;
    }

        .register-section p {
            color: #6b7280;
            margin: 0;
        }

        .register-section a {
            color: #06b6d4;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .register-section a:hover {
                color: #0891b2;
                text-decoration: underline;
            }

    .footer {
        text-align: center;
        font-size: 0.8rem;
        color: #a64bf4;
        margin-top: 32px;
        opacity: 0.7;
    }

