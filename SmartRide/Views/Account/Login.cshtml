<div class="page-container">
    <div class="login-container">
        <div class="brand-section">
            <div class="brand-title">Smart Ride</div>
            <div class="brand-subtitle">Digital Ride Solution</div>
        </div>

        <form asp-action="Login" method="post" class="login-form">
            <h2 class="form-title">User Login</h2>

            @Html.AntiForgeryToken()

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="validation-summary">
                    @Html.ValidationSummary(false, "", new { @class = "" })
                </div>
            }

            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Username" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Login</button>

            <div class="register-section">
                <p>Don't have an account? <a asp-action="Register">Register here</a></p>
            </div>
        </form>
    </div>

    <div class="footer">Developed by AW company</div>
</div>