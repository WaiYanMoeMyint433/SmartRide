@model RegisterViewModel
@{
    ViewBag.Title = "Register - Smart Ride";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: linear-gradient(135deg, #f8f6ff 0%, #ffffff 100%);
    }

    .page-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .register-container {
        background: white;
        border-radius: 24px;
        padding: 40px;
        box-shadow: 0 20px 60px rgba(166, 75, 244, 0.08);
        width: 100%;
        max-width: 420px;
        border: 1px solid rgba(166, 75, 244, 0.1);
    }

    .brand-section {
        text-align: center;
        margin-bottom: 40px;
    }

    .brand-title {
        font-size: 2.8rem;
        font-weight: 700;
        background: linear-gradient(135deg, #a64bf4, #c777f7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
        letter-spacing: -0.5px;
    }

    .brand-subtitle {
        font-size: 0.95rem;
        color: #9ca3af;
        font-weight: 400;
        font-style: italic;
    }

    .register-form {
        width: 100%;
    }

    .form-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #a64bf4;
        text-align: center;
        margin-bottom: 32px;
    }

    /* Role Selection Styles */
    .role-selection {
        margin-bottom: 32px;
    }

    .role-title {
        font-size: 1.1rem;
        font-weight: 500;
        color: #374151;
        text-align: center;
        margin-bottom: 24px;
    }

    .role-options {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-bottom: 24px;
    }

    .role-option {
        flex: 1;
        max-width: 120px;
        text-align: center;
        padding: 20px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        background: #fafafa;
    }

        .role-option:hover {
            border-color: #a64bf4;
            background: white;
        }

        .role-option.selected {
            border-color: #a64bf4;
            background: rgba(166, 75, 244, 0.05);
        }

    .role-icon {
        width: 48px;
        height: 48px;
        margin: 0 auto 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: #f3f4f6;
        transition: all 0.3s ease;
    }

    .role-option.selected .role-icon {
        background: rgba(166, 75, 244, 0.1);
        color: #a64bf4;
    }

    .role-option svg {
        width: 24px;
        height: 24px;
        stroke: currentColor;
    }

    .role-label {
        font-weight: 500;
        color: #374151;
        font-size: 0.9rem;
    }

    .role-option.selected .role-label {
        color: #a64bf4;
    }

    /* Vehicle Selection Styles */
    .vehicle-selection {
        margin-bottom: 24px;
        display: none;
    }

        .vehicle-selection.show {
            display: block;
        }

    .vehicle-title {
        font-size: 1.1rem;
        font-weight: 500;
        color: #a64bf4;
        margin-bottom: 20px;
    }

    .vehicle-options {
        display: flex;
        gap: 16px;
        margin-bottom: 20px;
    }

    .vehicle-option {
        flex: 1;
        text-align: center;
        padding: 16px 12px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        background: #fafafa;
    }

        .vehicle-option:hover {
            border-color: #a64bf4;
            background: white;
        }

        .vehicle-option.selected {
            border-color: #a64bf4;
            background: rgba(166, 75, 244, 0.05);
        }

    .vehicle-icon {
        width: 40px;
        height: 40px;
        margin: 0 auto 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .vehicle-icon svg {
            width: 32px;
            height: 32px;
            stroke: currentColor;
        }

    .vehicle-label {
        font-size: 0.85rem;
        font-weight: 500;
        color: #374151;
    }

    .vehicle-option.selected .vehicle-label {
        color: #a64bf4;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid #e5e7eb;
        border-radius: 25px;
        font-size: 1rem;
        outline: none;
        transition: all 0.3s ease;
        background: #fafafa;
    }

        .form-control:focus {
            border-color: #a64bf4;
            background: white;
            box-shadow: 0 0 0 3px rgba(166, 75, 244, 0.1);
        }

        .form-control::placeholder {
            color: #9ca3af;
            font-weight: 400;
        }

    .btn-register {
        width: 100%;
        padding: 16px;
        border-radius: 25px;
        border: none;
        background: linear-gradient(135deg, #a64bf4, #c777f7);
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 8px;
        box-shadow: 0 4px 15px rgba(166, 75, 244, 0.2);
    }

        .btn-register:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(166, 75, 244, 0.3);
        }

        .btn-register:active {
            transform: translateY(0);
        }

    .text-danger {
        font-size: 0.85rem;
        color: #ef4444;
        margin-top: 5px;
        display: block;
    }

    .validation-summary {
        background: #fef2f2;
        border: 1px solid #fecaca;
        border-radius: 12px;
        padding: 12px;
        margin-bottom: 20px;
        color: #dc2626;
        font-size: 0.9rem;
        text-align: center;
    }

    .login-section {
        text-align: center;
        margin-top: 24px;
        padding-top: 20px;
        border-top: 1px solid #f3f4f6;
    }

        .login-section p {
            color: #6b7280;
            margin: 0;
        }

        .login-section a {
            color: #06b6d4;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .login-section a:hover {
                color: #0891b2;
                text-decoration: underline;
            }

    .footer {
        text-align: center;
        font-size: 0.8rem;
        color: #a64bf4;
        margin-top: 32px;
        opacity: 0.7;
    }

    /* Hidden radio buttons 
    .role-radio,
    .vehicle-radio {
        display: none;
    }

    /*Responsive Design */
    @@media (max-width: 480px) {
        .page-container

    {
        padding: 16px;
    }

    .register-container {
        padding: 32px 24px;
    }

    .brand-title {
        font-size: 2.2rem;
    }

    .role-options {
        gap: 12px;
    }

    .role-option {
        padding: 16px 12px;
    }

    .form-control {
        padding: 14px 16px;
    }

    .btn-register {
        padding: 14px;
    }

    }

    @@media (min-width: 768px) {
        .page-container

    {
        padding: 40px;
    }

    .register-container {
        padding: 48px;
    }

    }
    
    </style>

<div class="page-container">
    <div class="register-container">
        <div class="brand-section">
            <div class="brand-title">Smart Ride</div>
            <div class="brand-subtitle">Digital Ride Solution</div>
        </div>

        <form asp-action="Register" method="post" class="register-form">
            <h2 class="form-title">User Registration</h2>

            @Html.AntiForgeryToken()

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="validation-summary">
                    @Html.ValidationSummary(false, "", new { @class = "" })
                </div>
            }

            <!-- Role Selection -->
            <div class="role-selection">
                <div class="role-title">I am</div>
                <div class="role-options">
                    <div class="role-option" data-role="driver">
                        <div class="role-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="2" />
                                <path d="M12 1v6m0 6v6m11-7h-6m-6 0H1" />
                            </svg>
                        </div>
                        <div class="role-label">Driver</div>
                    </div>
                    <div class="role-option" data-role="customer">
                        <div class="role-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                <circle cx="12" cy="7" r="4" />
                            </svg>
                        </div>
                        <div class="role-label">User</div>
                    </div>
                </div>
                <input type="radio" asp-for="UserType" value="2" id="driver" class="role-radio" />
                <input type="radio" asp-for="UserType" value="1" id="customer" class="role-radio" />
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>

            <!-- Vehicle Selection (for drivers) -->
            <div class="vehicle-selection" id="vehicleSelection">
                <div class="vehicle-title">Choose Your Vehicle</div>
                <div class="vehicle-options">
                    <div class="vehicle-option" data-vehicle="2">
                        <div class="vehicle-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M5 12V7a1 1 0 0 1 1-1h4l2 2h4l2 2v2" />
                                <circle cx="7" cy="17" r="2" />
                                <path d="M9 17h6" />
                                <circle cx="17" cy="17" r="2" />
                            </svg>
                        </div>
                        <div class="vehicle-label">Motorbike</div>
                    </div>
                    <div class="vehicle-option" data-vehicle="1">
                        <div class="vehicle-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 16H9m10 0h3v-3.15a1 1 0 0 0-.29-.71L20 10.4V6a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v4.4l-1.71 1.74a1 1 0 0 0-.29.71V16h3" />
                                <circle cx="7" cy="16" r="2" />
                                <circle cx="17" cy="16" r="2" />
                            </svg>
                        </div>
                        <div class="vehicle-label">Car</div>
                    </div>
                </div>
                <select asp-for="VehicleType" class="form-control" id="VehicleType" style="display: none;">
                    <option value="">Select vehicle type</option>
                    <option value="1">Car</option>
                    <option value="2">Motorbike</option>
                </select>
                <span asp-validation-for="VehicleType" class="text-danger"></span>
            </div>

            <!-- Basic Information -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Full Name" autocomplete="name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="E-mail" type="email" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Phone" class="form-control" placeholder="Phone" type="tel" autocomplete="tel" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="form-control" placeholder="Confirm Password" type="password" autocomplete="new-password" />
            </div>

            <!-- Driver-specific fields -->
            <div id="driverFields" style="display: none;">
                <div class="form-group">
                    <input asp-for="VehicleId" class="form-control" placeholder="Vehicle ID" />
                    <span asp-validation-for="VehicleId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="LicenseNumber" class="form-control" placeholder="Driver License" />
                    <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn-register">Register</button>

            <div class="login-section">
                <p>Already have an account? <a asp-action="Login">Login here</a></p>
            </div>
        </form>
    </div>

    <div class="footer">Developed by AW company</div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const roleOptions = document.querySelectorAll('.role-option');
        const vehicleOptions = document.querySelectorAll('.vehicle-option');
        const vehicleSelection = document.getElementById('vehicleSelection');
        const driverFields = document.getElementById('driverFields');
        const driverRadio = document.getElementById('driver');
        const customerRadio = document.getElementById('customer');
        const vehicleTypeSelect = document.getElementById('VehicleType');

        // Role selection handling
        roleOptions.forEach(option => {
            option.addEventListener('click', function () {
                // Remove selected class from all options
                roleOptions.forEach(opt => opt.classList.remove('selected'));
                // Add selected class to clicked option
                this.classList.add('selected');

                const role = this.dataset.role;
                if (role === 'driver') {
                    driverRadio.checked = true;
                    vehicleSelection.classList.add('show');
                    driverFields.style.display = 'block';
                } else {
                    customerRadio.checked = true;
                    vehicleSelection.classList.remove('show');
                    driverFields.style.display = 'none';
                }
            });
        });

        // Vehicle selection handling
        vehicleOptions.forEach(option => {
            option.addEventListener('click', function () {
                // Remove selected class from all vehicle options
                vehicleOptions.forEach(opt => opt.classList.remove('selected'));
                // Add selected class to clicked option
                this.classList.add('selected');

                const vehicleType = this.dataset.vehicle;
                vehicleTypeSelect.value = vehicleType;
            });
        });

        // Initialize default state
        const defaultRole = roleOptions[1]; // User option
        if (defaultRole) {
            defaultRole.click();
        }
    });
</script>